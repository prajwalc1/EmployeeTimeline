# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Security
SESSION_SECRET=change-me-in-production
JWT_SECRET=change-me-in-production

# Database Configuration
# Set to 'sqlite' for file-based database or 'postgres' for PostgreSQL
DB_TYPE=sqlite

# PostgreSQL configuration (required if DB_TYPE=postgres)
# DATABASE_URL=postgresql://username:password@host:port/dbname
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=timemanagement

# SQLite configuration (required if DB_TYPE=sqlite)
SQLITE_PATH=./data/database.sqlite

# Logging
LOG_LEVEL=info

# Application Settings
COMPANY_NAME=Schwarzenberg Tech
SYSTEM_TITLE=Time Management System
DEFAULT_LANGUAGE=de
TIMEZONE=Europe/Berlin

# Module Settings
ENABLE_TIME_TRACKING=true
ENABLE_LEAVE_MANAGEMENT=true
ENABLE_REPORTING=true
ENABLE_ADMIN=true